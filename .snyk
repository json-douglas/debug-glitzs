# Snyk (https://snyk.io) policy file, patches or ignores known vulnerabilities.
version: v1.25.0

# Security policy configuration for debug-glitz
# This file helps Snyk understand our security posture and policies

# Language settings
language-settings:
  javascript: true

# Patch settings - automatically apply patches when available
patch: true

# Ignore specific vulnerabilities (use sparingly and with justification)
ignore:
  # Currently no ignored vulnerabilities - all dependencies are secure
  # Any future ignores should be documented with:
  # - Clear business justification
  # - Expiration date
  # - Mitigation measures
  # - Regular review schedule

# Security policies
policies:
  # Fail build on high and critical vulnerabilities
  'fail-on': 'high'
  
  # Monitor for new vulnerabilities
  'monitor': true
  
  # Include development dependencies in scans
  'dev': true

# Exclude paths that don't need security scanning
exclude:
  # Test files and fixtures
  - 'test/**'
  - '**/*.test.js'
  - '**/*.spec.js'
  
  # Documentation and configuration
  - 'docs/**'
  - '*.md'
  - '.github/**'
  
  # Build artifacts
  - 'dist/**'
  - 'build/**'
  - 'coverage/**'

# Custom rules for this project
rules:
  # Ensure no hardcoded secrets
  - id: 'no-hardcoded-secrets'
    severity: 'high'
    
  # Validate dependency licenses
  - id: 'license-check'
    severity: 'medium'
    
  # Check for prototype pollution
  - id: 'prototype-pollution'
    severity: 'high'
    
  # Monitor for deprecated dependencies
  - id: 'deprecated-dependencies'
    severity: 'medium'
    
  # Check for known malicious packages
  - id: 'malicious-packages'
    severity: 'critical'