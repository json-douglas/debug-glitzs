{
  "name": "debug-glitzs",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/json-douglas/debug-glitzs.git"
  },
  "bugs": {
    "url": "https://github.com/json-douglas/debug-glitzs/issues"
  },
  "homepage": "https://github.com/json-douglas/debug-glitzs#readme",
  "description": "Lightweight debugging utility for Node.js and the browser",
  "keywords": [
    "debug",
    "log",
    "debug-glitz",
    "debugger"
  ],
  "files": [
    "src",
    "LICENSE",
    "README.md",
    "SECURITY.md",
    "SECURITY_GUIDELINES.md",
    "SECURITY_CHECKLIST.md",
    "SECURITY_RISK_ACCEPTANCE.md",
    "VULNERABILITY_DISCLOSURE.md",
    "THREAT_MODEL.md",
    "PRIVACY.md",
    "SUPPORT.md",
    "CONTRIBUTING.md",
    "CODE_OF_CONDUCT.md",
    "CHANGELOG.md"
  ],
  "author": "json douglas (https://github.com/json-douglas)",
  "contributors": [
    "TJ Holowaychuk <tj@vision-media.ca>",
    "Nathan Rajlich <nathan@tootallnate.net> (http://n8.io)",
    "Andrew Rhyne <rhyneandrew@gmail.com>",
    "Josh Junon (https://github.com/qix-)"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "xo",
    "test": "npm run test:node && npm run test:browser && npm run lint",
    "test:node": "mocha test.js test.node.js",
    "test:browser": "karma start --single-run",
    "test:coverage": "c8 --reporter=lcov --reporter=text mocha test.js test.node.js",
    "security:audit": "npm audit --audit-level=high --omit=dev",
    "security:audit:dev": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:snyk": "snyk test",
    "security:check": "npm run security:audit && npm run security:snyk",
    "security:validate": "node scripts/security-check.js",
    "prepare": "npm run security:audit"
  },
  "dependencies": {
    "ms": "^2.1.3",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "brfs": "^2.0.1",
    "browserify": "^16.2.3",
    "c8": "^10.1.3",
    "karma": "^6.4.4",
    "karma-browserify": "^6.0.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-mocha": "^2.0.1",
    "mocha": "^10.7.3",
    "mocha-lcov-reporter": "^1.3.0",
    "sinon": "^18.0.1",
    "snyk": "^1.1291.0",
    "xo": "^0.59.3"
  },
  "peerDependenciesMeta": {
    "supports-color": {
      "optional": true
    }
  },
  "main": "./src/index.js",
  "browser": "./src/browser.js",
  "engines": {
    "node": ">=6.0"
  },
  "xo": {
    "rules": {
      "import/extensions": "off"
    }
  }
}
